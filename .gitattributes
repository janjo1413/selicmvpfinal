# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyi text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Docs
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.xlsx binary
*.xls binary
*.xlsm binary
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
